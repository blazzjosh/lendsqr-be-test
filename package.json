{
  "name": "lendsqr-wallet-api",
  "version": "1.0.0",
  "description": "Lendsqr Backend Assessment - Wallet System",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --exec tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --runInBand",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "migrate:latest": "knex migrate:latest --knexfile knexfile.cjs",
    "migrate:rollback": "knex migrate:rollback --knexfile knexfile.cjs",
    "migrate:make": "knex migrate:make --knexfile knexfile.cjs",
    "db:reset": "npx tsx src/database/reset-database.ts",
    "db:fresh": "npm run db:reset && npm run migrate:latest",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f mysql",
    "docker:reset": "docker-compose down -v && docker-compose up -d"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^7.2.0",
    "knex": "^3.1.0",
    "mysql2": "^3.16.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/express-validator": "^2.20.33",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.7",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
